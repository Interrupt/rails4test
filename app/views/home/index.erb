<% @perk_categories.each do |category, perks| %>
  <div class="row">
    <div class="large-12 small-12 columns">
    <h3 class="title"><%= category %></h3>
    <% perks.each do |perk| %>
      <%= render :partial => "perks/preview", :locals => {:perk => perk} %>
    <% end %>
    </div>
  </div>
<% end %>
